{
  "manifest_version": 2,
  "name": "Rubberduck",
  "short_name": "Rubberduck",
  "description": "Code review assistant for GitHub",
  "version": "0.1.10",
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "index.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["fonts/*.woff2"],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://bitbucket.org/*",
        "https://www.codeview.io/*"
      ],
      "css": ["css/fileicon.css"]
    }
  ],
  "permissions": [
    "https://github.com/*",
    "https://bitbucket.org/*",
    "https://www.codeview.io/*",
    "storage",
    "identity",
    "contextMenus"
  ]
}
