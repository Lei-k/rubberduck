{
  "manifest_version": 2,
  "name": "mercury",
  "description": "Chrome extension for mercury",
  "version": "0.1.7",
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "index.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": [
    "https://github.com/*",
    "https://bitbucket.org/*",
    "http://localhost:8000/*",
    "https://www.codeview.io/*",
    "storage",
    "identity",
    "contextMenus"
  ],
  "update_url": "http://www.example.com/update.xml"
}
