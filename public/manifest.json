{
  "name": "mercury",
  "description": "Chrome extension for mercury",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "index.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*", "https://bitbucket.org/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "https://developer.chrome.com/*",
    "https://github.com/*",
    "https://bitbucket.org/*",
    "storage"
  ],
  "manifest_version": 2
}
