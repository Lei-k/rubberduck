{
  "manifest_version": 2,
  "name": "Rubberduck",
  "short_name": "Rubberduck",
  "description": "Code review assistant for GitHub",
  "version": "0.1.9",
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "index.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": [
    "https://github.com/*",
    "https://bitbucket.org/*",
    "http://localhost:8000/*",
    "https://www.codeview.io/*",
    "storage",
    "identity",
    "contextMenus"
  ]
}
