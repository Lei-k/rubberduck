{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "public/js",
    "noEmitOnError": true,
    "types": ["chrome", "webpack-env"],
    "jsx": "react",

    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "webpack/*",
    "public/**/*",
    "node_modules",
    "native-host/**/*",
    "__mocks__/*"
  ]
}
